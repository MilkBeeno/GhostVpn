<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ConnectResultActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:paddingStart="5dp"
        android:paddingTop="11dp"
        android:paddingEnd="5dp"
        android:paddingBottom="11dp"
        android:src="@drawable/connect_result_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginStart="19dp"
            android:layout_weight="1"
            android:background="@drawable/shape_connect_result_desc_background"
            android:orientation="vertical"
            android:paddingStart="19dp"
            android:paddingEnd="19dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivNetwork"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleStyle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxWidth="116dp"
                android:textColor="@color/FF1754FD"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="@string/connect_result_vpn_name_tage"
                android:textColor="@color/FF1754FD_40"
                android:textSize="12sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="19dp"
            android:layout_weight="1"
            android:background="@drawable/shape_connect_result_desc_background"
            android:orientation="vertical"
            android:paddingStart="19dp"
            android:paddingEnd="19dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/connect_result_link_speed"
                app:shapeAppearanceOverlay="@style/circleStyle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:textColor="@color/FF1754FD"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="@string/connect_result_vpn_ping"
                android:textColor="@color/FF1754FD_40"
                android:textSize="12sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.simple.ghostvpn.ad.view.ConnectResultNativeAdView
        android:id="@+id/nativeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp" />

</androidx.appcompat.widget.LinearLayoutCompat>